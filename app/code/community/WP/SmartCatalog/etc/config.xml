<?xml version="1.0"?>
<config>
    <modules>
        <WP_SmartCatalog>
            <version>3.4.2</version>
        </WP_SmartCatalog>
    </modules>
    <global>
        <models>
            <smartcatalog>
                <class>WP_SmartCatalog_Model</class>
            </smartcatalog>
        </models>
        <blocks>
            <smartcatalog>
                <class>WP_SmartCatalog_Block</class>
            </smartcatalog>
        </blocks>
        <helpers>
            <smartcatalog>
                <class>WP_SmartCatalog_Helper</class>
            </smartcatalog>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <smartcatalog>
                        <type>singleton</type>
                        <model>smartcatalog/observer</model>
                        <method>observeLayoutHandleInitialization</method>
                    </smartcatalog>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <layout>
            <updates>
                <smartcatalog>
                    <file>webandpeople/smartcatalog.xml</file>
                </smartcatalog>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <WP_SmartCatalog>
                    <files>
                        <default>WP_SmartCatalog.csv</default>
                    </files>
                </WP_SmartCatalog>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <smart_catalog>
            <general>
                <image_width>135</image_width>
                <image_height>135</image_height>
                <column_width>150</column_width>
                <display_short_desc>1</display_short_desc>
            </general>
            <include_jquery_files>
                <include_jquery>1</include_jquery>
                <include_debouncedresize>1</include_debouncedresize>
            </include_jquery_files>
        </smart_catalog>
    </default>
</config>
