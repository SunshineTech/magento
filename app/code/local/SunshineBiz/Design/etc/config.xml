<?xml version="1.0"?>
<config>
    <modules>
        <SunshineBiz_Design>
            <version>1.0.0.0</version>
        </SunshineBiz_Design>
    </modules>
    <global>
        <models>
            <design>
                <class>SunshineBiz_Design_Model</class>
            </design>
            <core>
                <rewrite>
                    <design_package>SunshineBiz_Design_Model_Package</design_package>
                </rewrite>                
            </core>
        </models>        
        <helpers>
            <design>
                <class>SunshineBiz_Design_Helper</class>
            </design>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <switch_skin>
                        <class>design/observer</class>
                        <method>switchSkin</method>
                    </switch_skin>
                </observers>
            </controller_action_predispatch>
        </events>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <SunshineBiz_Design>
                    <files>
                        <default>SunshineBiz_Design.csv</default>
                    </files>
                </SunshineBiz_Design>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <design>
            <theme>
                <skin_selectable>1</skin_selectable>
                <default>f001</default>
            </theme>            
        </design>
    </default>
</config>