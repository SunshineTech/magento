<?xml version="1.0"?>
<config>
    <modules>
        <SunshineBiz_SocialConnect>
            <version>1.0.0.0.0</version>
        </SunshineBiz_SocialConnect>
    </modules>
    <global>
        <models>
            <socialconnect>
                <class>SunshineBiz_SocialConnect_Model</class>
            </socialconnect>
        </models>
        <blocks>
            <socialconnect>
                <class>SunshineBiz_SocialConnect_Block</class>
            </socialconnect>            
        </blocks>
        <helpers>
            <socialconnect>
                <class>SunshineBiz_SocialConnect_Helper</class>
            </socialconnect>
        </helpers>
        <resources>
            <socialconnect_setup>
                <setup>
                    <module>SunshineBiz_SocialConnect</module>
                    <class>SunshineBiz_SocialConnect_Model_Resource_Setup</class>
                </setup>
            </socialconnect_setup>
        </resources> 
    </global>
    <frontend>
        <translate>
            <modules>
                <SunshineBiz_SocialConnect>
                    <files>
                        <default>SunshineBiz_SocialConnect.csv</default>
                    </files>
                </SunshineBiz_SocialConnect>
            </modules>
        </translate>
        <routers>
            <socialconnect>
                <use>standard</use>
                <args>
                    <module>SunshineBiz_SocialConnect</module>
                    <frontName>socialconnect</frontName>
                </args>
            </socialconnect>
        </routers>
        <layout>
            <updates>
                <socialconnect>
                    <file>socialconnect.xml</file>
                </socialconnect>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
    	<translate>
            <modules>
                <SunshineBiz_SocialConnect>
                    <files>
                        <default>SunshineBiz_SocialConnect.csv</default>
                    </files>
                </SunshineBiz_SocialConnect>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <socialconnect>
            <general>
                <display>1</display>
                <title>Connect with social account</title>
            </general>
            <google>
                <active>1</active>
                <model>socialconnect/google_method</model>
                <client_id>771500144817.apps.googleusercontent.com</client_id>
                <client_secret>DG9oTagPccNw9-W4gJKQdyPw</client_secret>
            </google>
            <facebook>
                <model>socialconnect/facebook_method</model>
            </facebook>
            <twitter>
                <model>socialconnect/twitter_method</model>
            </twitter>
        </socialconnect>
    </default>
</config>